sources = """
          ab_transcode_job.cc
	  ab_transcoder.cc
          analyse_audio_job.cc
          audio_analysis.cc
          audio_decoder.cc
          audio_source.cc
          config.cc
          combiner.cc
          cross.cc
          dci_metadata.cc
          dcp_content_type.cc
          dcp_video_frame.cc
          decoder.cc
          decoder_factory.cc
          delay_line.cc
          dolby_cp750.cc
          encoder.cc
          examine_content_job.cc
          external_audio_decoder.cc
          filter_graph.cc
          ffmpeg_compatibility.cc
          ffmpeg_decoder.cc
          film.cc
          filter.cc
          format.cc
          gain.cc
          image.cc
          imagemagick_decoder.cc
          job.cc
          job_manager.cc
          log.cc
          lut.cc
