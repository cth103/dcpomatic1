def build(bld):
    obj = bld(features = 'cxx cxxshlib')
    obj.name   = 'libdvdomatic'
    obj.export_includes = ['.']
    obj.uselib = 'GLIB AVCODEC AVUTIL AVFORMAT AVFILTER SWSCALE SWRESAMPLE SNDFILE BOOST_FILESYSTEM BOOST_THREAD GTKMM OPENJPEG POSTPROC'
    if bld.env.DEBUG_HASH:
        obj.uselib += ' MHASH'
    obj.lib    = 'tiff'
    obj.source = """
		 ab_transcode_job.cc
		 ab_transcoder.cc
		 config.cc
		 config_dialog.cc
		 content_type.cc
		 copy_from_dvd_job.cc
		 dcp_video_frame.cc
		 decoder.cc
                 decoder_factory.cc
		 encoder.cc
		 error_dialog.cc
		 examine_content_job.cc
                 ffmpeg_decoder.cc
    	         film.cc
		 film_editor.cc
		 film_state.cc
		 film_viewer.cc
		 filter.cc
		 filter_dialog.cc
		 filter_view.cc
		 format.cc
		 gpl.cc
                 image.cc
		 j2k_wav_encoder.cc
		 job.cc
		 job_manager.cc
		 job_manager_view.cc
		 log.cc
		 lut.cc
		 make_dcp_job.cc
		 make_mxf_job.cc
		 opendcp_job.cc
		 scaler.cc
		 server.cc
		 thumbs_job.cc
	         tiff_encoder.cc
                 timer.cc
		 transcode_job.cc
		 transcoder.cc
		 util.cc
		 """
    obj.target = 'dvdomatic'
